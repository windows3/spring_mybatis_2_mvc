<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.windows3.dao.ProductDao">

        <resultMap id="productMap" type="Product">
    <id column="id" property="id"></id>
    <result column="PRODUCT_NAME" property="productName"></result>
    <result column="PRODUCT_TYPE" property="productType"></result>
    <result column="PRODUCT_PRICE" property="productPrice"></result>
    <result column="PRODUCT_IS_DELETED" property="productIsDeleted"></result>
    <result column="PRODUCT_CREATE_TIME" property="productCreateTime"></result>
    <result column="PRODUCT_MODIFIED_TIME" property="productModifiedTime"></result>
   <!-- <association property="productDetail" column="id" select="com.windows3ws3.dao.ProductDetailDao.findProductDetailByPId" ></association>-->
</resultMap>


    <sql id="queryProduct">
        SELECT  * FROM  product
    </sql>
    <select id="queryallProduct" resultMap="productMap">
        <include refid="queryProduct"></include>
    </select>
    <sql id="createId">
        SELECT SHOPPING_SEQ.nextval FROM dual
    </sql>

    <select id="queryProductById" parameterType="int" resultMap="productMap">
        <include refid="queryProduct"></include>
        <where>
            <choose>
                <when test="value!=null">
                    AND  id=#{value}
                </when>
                <otherwise>
                    AND  1=2
                </otherwise>
            </choose>
        </where>
    </select>

<insert id="addProduct" parameterType="Product">
    <selectKey resultType="java.lang.Integer" order="BEFORE" keyProperty="id">
        <include refid="createId"></include>
    </selectKey>
    INSERT INTO product(ID, PRODUCT_NAME, PRODUCT_TYPE,PRODUCT_PRICE)
    VALUES (#{id},#{productName},#{productType},#{productPrice})
</insert>
</mapper>

  
